{
  "name": "ecommerce-aggregator",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@heroicons/react": "^2.0.18",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "framer-motion": "^11.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "react-scripts": "^5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "test:selenium": "mocha selenium-tests/tests/*.test.js --timeout 60000",
    "test:selenium:simple": "mocha selenium-tests/tests/HomePage.simple.test.js --timeout 30000",
    "test:selenium:direct": "mocha selenium-tests/tests/HomePage.direct.test.js --timeout 45000",
    "test:selenium:minimal": "mocha selenium-tests/tests/HomePage.minimal.test.js --timeout 30000",
    "test:selenium:windows": "mocha selenium-tests/tests/HomePage.windows.test.js --timeout 45000",
    "test:selenium:presentation": "mocha selenium-tests/tests/HomePage.presentation.test.js --timeout 60000",
    "test:selenium:clean": "mocha selenium-tests/tests/HomePage.clean.test.js --timeout 60000",
    "test:selenium:silent": "mocha selenium-tests/tests/HomePage.silent.test.js --timeout 60000",
    "test:selenium:ultra-clean": "node selenium-tests/scripts/run-silent.js",
    "test:selenium:headless": "cross-env HEADLESS=true mocha selenium-tests/tests/*.test.js --timeout 60000",
    "test:e2e": "start-server-and-test start http://localhost:3000 test:selenium",
    "test:e2e:simple": "start-server-and-test start http://localhost:3000 test:selenium:simple",
    "test:e2e:direct": "start-server-and-test start http://localhost:3000 test:selenium:direct",
    "test:e2e:minimal": "start-server-and-test start http://localhost:3000 test:selenium:minimal",
    "test:e2e:windows": "start-server-and-test start http://localhost:3000 test:selenium:windows",
    "test:e2e:presentation": "start-server-and-test start http://localhost:3000 test:selenium:presentation",
    "test:e2e:clean": "start-server-and-test start http://localhost:3000 test:selenium:clean",
    "test:e2e:silent": "start-server-and-test start http://localhost:3000 test:selenium:silent",
    "test:e2e:headless": "start-server-and-test start http://localhost:3000 test:selenium:headless"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@wdio/cli": "^9.19.2",
    "@wdio/local-runner": "^9.19.2",
    "@wdio/mocha-framework": "^9.19.2",
    "@wdio/spec-reporter": "^9.19.2",
    "autoprefixer": "^10.4.16",
    "chai": "^6.1.0",
    "chromedriver": "^140.0.4",
    "cross-env": "^10.0.0",
    "geckodriver": "^6.0.1",
    "mocha": "^11.7.2",
    "mochawesome": "^7.1.4",
    "postcss": "^8.4.32",
    "selenium-webdriver": "^4.35.0",
    "start-server-and-test": "^2.1.2",
    "tailwindcss": "^3.4.0"
  }
}
